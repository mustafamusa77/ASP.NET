<h2>All Orders</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th><th>Phone</th><th>Pizza</th><th>Qty</th><th>Address</th><th>Actions</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.CustomerName</td>
            <td>@order.PhoneNumber</td>
            <td>@order.PizzaType</td>
            <td>@order.Quantity</td>
            <td>@order.Address</td>
            <td><a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>