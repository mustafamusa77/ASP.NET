@model Order

<h2>Order Your Pizza</h2>

<form asp-action="Index" method="post">
    <input asp-for="CustomerName" placeholder="Name" class="form-control" />
    <input asp-for="PhoneNumber" placeholder="Phone" class="form-control" />
    <select asp-for="PizzaType" class="form-control">
        <option>Margherita</option>
        <option>Pepperoni</option>
        <option>Vegetarian</option>
    </select>
    <input asp-for="Quantity" type="number" class="form-control" />
    <input asp-for="Address" placeholder="Address" class="form-control" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
